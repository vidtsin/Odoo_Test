<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record model="ir.ui.view" id="view_stock_quant_tree_inherited">
        <field name="name">stock.quant.tree.inherited</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_id']" position="replace">
                <field name="product_uom_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='quantity']" position="replace">
            	<field name="quantity"/>
            	<field name="product_uom_id"/>
            	<field name="boxes"/>
            </xpath>
        </field>
    </record>

	<record model="ir.actions.act_window" id="prod_list_action_inherited">
		<field name="name">Stock Summary</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">stock.quant</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,pivot,form</field>
		<field name="target">fullscreen</field>
		<field name="domain">['|','|','|','|','|',['product_id.categ_id.name','=','FG'],['product_id.categ_id.parent_id.name','=','FG'],['product_id.categ_id.parent_id.parent_id.name','=','FG'],['product_id.categ_id.name','=','BG'],['product_id.categ_id.parent_id.name','=','BG'],['product_id.categ_id.parent_id.parent_id.name','=','BG'],['location_id.usage','=', 'internal']]</field>
	</record>

	<menuitem id="prod_categ_menu" name="Stock Summary" parent="stock.menu_warehouse_report" action="prod_list_action_inherited"/>

</odoo>